#include <iostream>
#include <string>

using namespace std;

int main()
{



 string places [2][13]={{"Alberta","British Columbia","Manitoba","New Brunswick", "Newfoundland and Labrador","Northwest Territories", "Nova Scotia", "Nunavut","Ontario", "Prince Edward Island", "Quebec", "Saskatchewan", "Yukon"},{"Edmonton","Victoria","Winnipeg","Fredericton","St. Johnâ€™s","Yellowknife","Halifax","Iqaluit","Toronto","Charlottetown","Quebec","Regina","Whitehorse"}};                                                               
 int i;
 int w;
 int random;
 int t;
 string capital;
 int correct;
 int m;
 
 
 
    


  for(i=0;i<2;i++) {
 
  for(w=0;w<13;w++){

     places[i][w];
          
      }
       
  
  }
  
    for(t=0;t<10;t++) {
    
    srand(time(NULL));
              
    random=rand()% 13;
    

   cout<<"Enter the capital of " <<places[0][random]<< "\n";
   cin>>capital;
     
     if(places[1][random]==capital) {
     
     cout<<" You are correct ";
     correct++;

     }
     
  else {
     cout<<" You are wrong ";
    }
  
    }
   
   cout<<" Your mark is " <<10/correct<< " out of 10\n";
    
}
 

 
